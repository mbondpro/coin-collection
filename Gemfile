# Coin
source 'http://rubygems.org'

gem 'rake', '0.9.2.2'
gem 'rails', '3.2.22.4'
gem 'mysql2', '~>0.3.21'

gem 'will_paginate'
gem 'acts_as_tree'
gem 'nokogiri'

gem 'clearance'
gem 'paperclip'

# Asset template engines
# Gems used only for assets and not required
# in production environments by default.
group :assets do
	gem 'uglifier'
  gem 'sass-rails'
end

gem 'jquery-rails'
gem 'jquery-ui-rails'

# Deploy with Capistrano
gem 'capistrano'

# supply Javascript runtime
gem 'execjs'
gem 'therubyracer'

group :development do
  gem "thin"
end

group :test do
  # Pretty printed test output
  gem 'turn', :require => false
end
